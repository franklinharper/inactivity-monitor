<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

  <PreferenceCategory app:title="@string/settings_reminders">

    <SwitchPreferenceCompat
        app:key="notify"
        app:title="@string/settings_notification" />

    <Preference
        app:key="@string/pref_key_system_notification"
        app:summary="@string/settings_customize_notification_summary"
        app:title="@string/settings_customize_notification" />

    <SwitchPreferenceCompat
        app:key="@string/pref_key_vibrate"
        app:title="@string/settings_vibrate" />

  </PreferenceCategory>
</PreferenceScreen>